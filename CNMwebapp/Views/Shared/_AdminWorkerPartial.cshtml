@using Microsoft.AspNetCore.Identity
@inject SignInManager<Worker> SignInManager
@inject UserManager<Worker> UserManager


@if (SignInManager.IsSignedIn(User))
{
    if (await UserManager.IsInRoleAsync(await UserManager.GetUserAsync(User), "Admin"))
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="JobManager">Manage Jobs</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="CreateJob">Create Job</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="UserManager">Manage Users</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Job" asp-action="Jobs">Sign up to Jobs</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Job" asp-action="Schedule">Schedule</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Job" asp-action="Jobs">Sign up to Jobs</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Job" asp-action="Schedule">Schedule</a>
        </li>
    }
}
